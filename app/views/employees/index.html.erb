<a href="/#">на главную</a>

<div class="container">
	<h1>сотрудники</h1>
<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">данные сотрудника</th>
			
		</tr>
	</thead>
	<tbody>
		<% @emps.each do |e| %>
		<% emp_check_fk %>
		<tr>
				<td>
					<%= get_rownum_psh %>
				</td>
				<td> 
						<%= e.person_num %></br>
						<%= e.last_name %> 
						<%= e.first_name %> 
						<%= e.father_name %><br>
						<%= e.onboarding_date %><br>
						
						<div class="emps_index">
							<%= form_for :employee, 
									url: "#{emps_path}/#{e.emp_id}",
									method: :delete,
									data: {turbo: false} do |f| %>
							
							<% if e.errors[:emp_id].count > 0 %>
								<%= f.submit 'delete', disabled: true %>
							<% else %>
								<%= f.submit 'delete' %>
							<% end %>	

						<% end %>
						</div>

						<div class="emps_index">
							<%= form_for :employee, 
									url: "#{emps_path}/#{e.emp_id}/edit",
									method: :get,
									data: {turbo: false} do |f| %>
							
							<%= f.submit 'edit' %>
						<% end %>
						</div>

						<div class="emps_index">
							<%= form_for :employee, 
									url: "#{emps_path}/#{e.emp_id}",
									method: :get,
									data: {turbo: false} do |f| %>
							
							<%= f.submit 'show' %>
						<% end %>
						</div>
						<p class="emp_error">
							<% if e %>
								<%= e.errors[:emp_id].first %>
							<% end %>
						</p>
				</td>
		</tr>
		<% end %>
		<% reset_row_num %>
	</tbody>
</table>
</div>

