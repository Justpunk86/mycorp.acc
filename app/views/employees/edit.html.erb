<div class="container">
	<h2>
		<%= @emp.person_num %></br> 	
	</h2>
	<%= form_with model: @emp, url: "#{emps_path}/#{@emp.emp_id}", method: :put do |f| %>

	<div class="inner_left_container">
		
		<%= f.label :Фамилия %>
		<%= f.text_field :last_name %></br>
		<%= f.label :Имя %>
		<%= f.text_field :first_name %></br>
		<%= f.label :Отчество %>
		<%= f.text_field :father_name %></br>
		<%= f.label :СНИЛС %>
		<%= f.text_field :snils %></br>
		<%= f.label :ИНН %>
		<%= f.text_field :tin %></br>
	</div>
	<div class="inner_right_container">
		
		<%= f.label "Серия паспорта" %>
		<%= f.text_field :passport_sn %></br>
		<%= f.label "Номер паспорта" %>
		<%= f.text_field :passport_num %></br>
		<%= f.label "Дата приёма" %>
		<%= f.text_field :onboarding_date %></br>
		<%= f.label "Дата увольнения" %>
		<%= f.text_field :leaving_date %></br>
		<%= f.label "Дата начала трудового стажа" %>
		<%= f.text_field :insurance_start_date %></br>
		
	</div>
		
		<div class="inner_right_container">
		
		
			<%= f.submit 'Сохранить' %>
		
		</div>
	

	<% end %>
</div>
				
				
	